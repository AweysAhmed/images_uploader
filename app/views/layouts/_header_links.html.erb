<% if user_signed_in? %>
  <li class="sm:inline-block"><%= link_to 'Account', user_path(current_user.id), class: 'p-3 hover:text-white' %></li>
  <li class="sm:inline-block"><%= link_to 'Edit Account', edit_user_registration_path, class: 'p-3 hover:text-white' %></li>
  <li class="sm:inline-block"><%= link_to 'Logout', destroy_user_session_path, class: 'p-3 hover:text-white', method: :delete %></li>
<% else%>
  <li class="sm:inline-block"><%= link_to 'Login', new_user_session_path, class: 'p-3 hover:text-white' %></li>
<% end %>